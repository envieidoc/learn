_unprintf()
{   #unprint sentence
    [ -z "$1" ] && return 1
    _unprintf_var_word_len=$(expr ${#1})
    _unprintf_var_i=0
    while [ "$_unprintf_var_i" -lt $(expr $_unprintf_var_word_len) ]; do
        _unprintf_var_i=$(expr $_unprintf_var_i + 1)
        printf "%b" "\b"
    done
}
