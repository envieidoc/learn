_str2lower()
{   #convert a string to lower string
    [ -z "$1" ] && return 1
    printf "%s\\n" "$@" | tr 'ABCDEFGHIJKLMNOPQRSTUVWXYZ' 'abcdefghijklmnopqrstuvwxyz' # tr '[:upper:]' '[:lower:]'
}
#==================================================== Example ====
#hello="HELLO WORLD"
#hello=$(_str2lower "$hello")
#printf "%s\\n" "$hello"   #prints "hello world"
#=================================================================

_str2upper()
{   #convert a string to lower string
    [ -z "$1" ] && return 1
    printf "%s\\n" "$@" | tr 'abcdefghijklmnopqrstuvwxyz' 'ABCDEFGHIJKLMNOPQRSTUVWXYZ' # tr '[:upper:]' '[:lower:]'
}
