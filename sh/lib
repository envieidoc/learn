_usage()
{   #prints an usage msg and exits with 0
    printf "%s\\n" "Usage: `expr "$0" : '.*/\([^/]*\)'` [OPTION] FILE"
    printf "%s\\n" "  -a   description"
    printf "%s\\n" "  -b   description"
    printf "%s\\n" "  -c   description"
    exit 0
}
