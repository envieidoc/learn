#else
    #printf "%s\\n" "vararray is not an array"
#fi
#=================================================================

_isempty()
{  #detect if arg is an empty file, returns 0 on sucess, 1 otherwise
    [ -z "$1" ] && return 1
    if [ -f "$1" ] && [ X"$(wc -c "$1" | cut -d" " -f1)" = X"0" ]; then
        return 0
    else
        return 1
    fi
}
#==================================================== Example ====
