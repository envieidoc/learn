#if _whereis command >/dev/null; then
    #command 
#fi
#=================================================================

_xmessage()
{   #prints a message using xmessage || gxmessage
    [ -z "$1" ] && return 1
    XMESSAGE=$(command -v gxmessage 2>/dev/null) \
             || XMESSAGE=$(command -v xmessage 2>/dev/null)
    MESSAGE="$(expr "$0" : '.*/\([^/]*\)'): $*"
    printf "%s\\n" "$MESSAGE" | fold -s -w ${COLUMNS:-80} >&2
    if [ -n "$DISPLAY" ] && [ -n "$XMESSAGE" ]; then
        printf "%s\\n" "$MESSAGE" | fold -s -w ${COLUMNS:-80} \
               | $XMESSAGE -center -file -
    fi
}
#==================================================== Example ====
#_xmessage "Notice ..."
#=================================================================
