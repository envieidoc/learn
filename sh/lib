_isalphanum()
{ #check for alphanum strings
  # return 0 if all upper+lower+digits, 1 otherwise

  # Remove all unacceptable chars
  [ -z "$1" ] && return 1
  _isalphanum_var_compressed="$(printf "%s" "$1" | \
                              sed -e 's/[^[:alnum:]]//g')"

  [ X"$_isalphanum_var_compressed" = X"$1" ] && return 0 || return 1
}
