#!/usr/bin/env bash

printf "%s\\n" "==================================="
printf "%s\\n" "[+] Running into the 1st datacenter"
printf "%s\\n" "==================================="
#http://mywiki.wooledge.org/BashFAQ/089
#!faq ssh
while read <&3 ip
do
    printf "%s\\n" "$@ $ip"
    ssh $ip $@
    printf "%s\\n" "==================================="
done 3< DC1-ips.txt

printf "%s\\n" "==================================="
printf "%s\\n" "[+] Running into the 2nd datacenter"
printf "%s\\n" "==================================="
while read <&4 ip
do
    printf "%s\\n" "$@ $ip"
    ssh $ip $@
    printf "%s\\n" "==================================="
done 4< DC2-ips.txt
